"================================================================
" appearance
"================================================================

" syntaxごとに文字色を変化
syntax on

" フォントとサイズ
set guifont=Ricty:h12

" 256色で表示
set t_Co=256

" カラースキーム
colorscheme hybrid

" 行番号を表示
set number

" 折り返し禁止
set nowrap

" カーソル位置表示
set ruler

" カーソル行をハイライト
set cursorline

" カーソル位置のカラムのハイライト
set cursorcolumn

" 対応するカッコをハイライト
set showmatch

" カッコをハイライトする時間(sec)
set matchtime=2

" コマンド非表示
set noshowcmd

" 空白文字の可視化
set list
set listchars=tab:»-,trail:_,eol:↲,extends:»,precedes:«,nbsp:･

" ステータスラインを常に表示
set laststatus=2

" コマンドラインの高さ
set cmdheight=2

" タイトル表示
set title

" タブエリアを常に表示
set showtabline=2
